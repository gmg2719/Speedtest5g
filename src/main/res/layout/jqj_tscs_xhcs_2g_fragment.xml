<?xml version="1.0" encoding="utf-8"?>
<!-- 投诉测试-信号采集 - 2G -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/tscs_xhcs_2g_cb_if2g"
                style="@style/tv_warp"
                android:button="@null"
                android:drawablePadding="7dp"
                android:drawableRight="@drawable/wq_check_box_circle_blue_gray"
                android:text="@string/tscs_none_2g"
                android:textColor="@color/selector_text_color"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/tscs_xhcs_2g_btn_yjcs"
                    style="@style/tv_warp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_btn_background_blue"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:text="@string/tscs_yjcs"
                    android:textColor="@color/ui_blue"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/style_sp_x"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:background="@drawable/bg_blue_1dp" />

                    <TextView
                        android:id="@+id/tscs_xhcs_2g_tv_xhcs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="@string/tscs_jccs"
                        android:textColor="@color/black_half"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/tscs_xhcs_2g_ll_xhcs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone" >

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tscs_xhcs_2g_tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tscs_xhcs_2g_tv_xhcs_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/tscs_zk"
                    android:textColor="@color/ui_blue"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tscs_xhcs_2g_ll_xhcs_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/tscs_xhcs_2g_ll_mainci"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        </LinearLayout>

                        <EditText
                            android:id="@+id/tscs_xhcs_2g_et_mainci"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_shape"
                            android:gravity="left|center_vertical"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/ui_blue"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/tscs_c_lq_ci"
                            android:textColor="@color/black_half"
                            android:textColorHint="@color/black_micro"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/tscs_xhcs_2g_et_nextci"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_shape"
                            android:gravity="left|center_vertical"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/ui_blue"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/tscs_xhcs_2g_ll_rxl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                        </LinearLayout>

                        <EditText
                            android:id="@+id/tscs_xhcs_2g_et_rxl"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_shape"
                            android:gravity="left|center_vertical"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/ui_blue"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/tscs_c_lq_rxl"
                            android:textColor="@color/black_half"
                            android:textColorHint="@color/black_micro"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/tscs_xhcs_2g_et_nextrxl"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_shape"
                            android:gravity="left|center_vertical"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/ui_blue"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" >

                    <Button
                        android:id="@+id/tscs_xhcs_2g_btn_jcxhcs"
                        style="@style/tv_warp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_btn_background_blue"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="8dp"
                        android:text="@string/tscs_cs"
                        android:textColor="@color/ui_blue"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/style_sp_x"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:background="@drawable/bg_blue_1dp" />

                    <TextView
                        android:id="@+id/tscs_xhcs_2g_tv_yybd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="@string/voiceDialogTest"
                        android:textColor="@color/black_half"
                        android:textSize="@dimen/sp_14" />

                    <ProgressBar
                        android:id="@+id/tscs_xhcs_2g_pb_yybd"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tscs_xhcs_2g_tv_yybd_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/tscs_zk"
                    android:textColor="@color/ui_blue"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tscs_xhcs_2g_ll_yybd_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/tscs_xhcs_2g_ll_jtl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tscs_xhcs_2g_et_jtl"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_shape"
                        android:gravity="left|center_vertical"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/ui_blue"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:id="@+id/tscs_xhcs_2g_ll_dhl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/tscs_xhcs_2g_et_dhl"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_shape"
                        android:gravity="left|center_vertical"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/ui_blue"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" >

                    <Button
                        android:id="@+id/tscs_xhcs_2g_btn_yybdcs"
                        style="@style/tv_warp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_btn_background_blue"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="8dp"
                        android:text="@string/tscs_cs"
                        android:textColor="@color/ui_blue"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>