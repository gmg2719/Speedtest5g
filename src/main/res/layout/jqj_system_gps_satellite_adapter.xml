<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <TextView
        android:id="@+id/tv_system_gps_satellite_azimuth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/gray_c0c0c3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_system_gps_satellite_altitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/gray_c0c0c3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_system_gps_satellite_snr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/gray_c0c0c3"
        android:textSize="12sp"
        android:visibility="gone" />

    <cn.nokia.speedtest5g.view.HorizontalProgressBarWithNumber
        android:id="@+id/hpro_system_gps_satellite_snr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/ui_bg_blue"
        android:padding="5dp"
        zhy:progress_horizontal_reached_bar_height="10dp"
        zhy:progress_horizontal_text_color="@color/system_blue"
        zhy:progress_horizontal_unreached_color="@color/ui_bg_blue" />

    <TextView
        android:id="@+id/tv_system_gps_satellite_use"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/gray_c0c0c3"
        android:textSize="12sp" />

</LinearLayout>