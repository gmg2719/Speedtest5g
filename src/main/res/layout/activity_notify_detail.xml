<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <cn.nokia.speedtest5g.view.actionbar.MyActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_notify_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/black_half"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_notify_detail_time"
                style="@style/tv_warp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black_micro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_notify_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/black_half"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_notify_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/icon_xqzb_help_item_bg"
                android:divider="@drawable/split_x_half"
                android:orientation="vertical"
                android:showDividers="middle" >

                <LinearLayout
                    android:id="@+id/ll_notify_detail_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_region"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_region_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_range"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_range_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_start_time"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_start_time_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_end_time"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_end_time_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_recover_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_recover_time"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_recover_time_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_phenomenon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_phenomenon"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ll_notify_detail_phenomenon_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_notify_detail_caliber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/split_y_half"
                    android:orientation="horizontal"
                    android:showDividers="middle" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="13dp"
                        android:text="@string/notify_detail_caliber"
                        android:textColor="@color/black_half"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_notify_detail_caliber_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="13dp"
                        android:textColor="@color/blue_54678b"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>