<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_dialog_edging"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/downloadProgress"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="10dp"
        android:textStyle="bold" />

    <cn.nokia.speedtest5g.dialog.downdprogress.MyTextProgressBar
        android:id="@+id/progressBar_down"
        style="@style/tallerBarStyle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_progressbar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    
   	<View 
        android:layout_width="wrap_content"
        android:background="#474747"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"/>
   
    <Button
        android:id="@+id/btn_progressbar_no"  
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/transparent"
	    android:textColor="@color/color_dialgo_download_btn"
	    android:textSize="16sp"
	    android:text="@string/cancel"/>

</LinearLayout>