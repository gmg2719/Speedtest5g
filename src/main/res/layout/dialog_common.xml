<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/aw_white_panel_2"
    android:orientation="vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/tv_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="13dp"
        android:text="提示"
        android:textColor="@color/black_half"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/module_bg_line_color" />

    <!-- 内容 -->

    <ScrollView
        android:id="@+id/sv_common_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="90dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_common_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tv_common_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black_small"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <!-- 按钮 -->

    <LinearLayout
        android:id="@+id/ll_common_dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_common_dialog_cancel"
            style="@style/tv_weight"
            android:background="@drawable/drawable_speed_test_switch_btn_unselect"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="#2f73f5"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_common_dialog_ok"
            style="@style/tv_weight"
            android:background="@drawable/drawable_speed_test_switch_btn_select"
            android:padding="10dp"
            android:text="@string/ok"
            android:textColor="@color/white_edeeee"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>