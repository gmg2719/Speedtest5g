<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speed_test_set_adapter_ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bm_module_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="13dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/speed_test_set_adapter_tv_title1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black_half"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/arrow_small_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/speed_test_set_adapter_pb_value"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/speed_test_set_progressbar" />

            <TextView
                android:id="@+id/speed_test_set_adapter_tv_title3"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/black_half"
                android:textSize="@dimen/sp_12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/speed_test_set_adapter_tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_c0c0c3"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>