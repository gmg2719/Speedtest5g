<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_black_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingTop="15dp" >

    <ImageView
        android:id="@+id/iv_speed_pk_operator_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="3dp" >

        <TextView
            android:id="@+id/tv_speed_pk_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_c0c0c3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_speed_pk_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/gray_c0c0c3"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_speed_download_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——"
            android:textColor="@color/white_edeeee"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/speed_test_donwload_mbps"
            android:textColor="@color/gray_929aac"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_speed_pk_upload_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——"
            android:textColor="@color/white_edeeee"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/speed_test_upload_mbps"
            android:textColor="@color/gray_929aac"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/arrow_small_right" />

</LinearLayout>