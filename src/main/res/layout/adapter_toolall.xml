<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="5dp" >

        <FrameLayout
            android:id="@+id/toolall_top_layout"
            android:layout_width="37dp"
            android:layout_height="37dp" >

            <ImageView
                android:id="@+id/toolall_top_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/downTest"
                android:maxHeight="@dimen/wq_main_bottom_iv_size"
                android:maxWidth="@dimen/wq_main_bottom_iv_size" />

            <TextView
                android:id="@+id/toolall_top_tv_number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@drawable/round_in_red"
                android:gravity="center"
                android:textColor="@color/gray_c0c0c3"
                android:textSize="@dimen/wq_main_size_small"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/toolall_top_iv_make_red"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:src="@drawable/round_small_red"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/toolall_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_c0c0c3"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/toolall_top_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/abandon" />

    <!-- 编辑状态 -->

    <ImageView
        android:id="@+id/toolall_top_cb_edit_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/abandon"
        android:paddingBottom="23dp"
        android:paddingLeft="23dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

</RelativeLayout>