<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <cn.nokia.speedtest5g.view.actionbar.MyActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <!-- 版本信息 -->

            <Button
                android:id="@+id/settings_btn_bbxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/bg_color"
                android:drawableRight="@drawable/arrow_small_right"
                android:gravity="left|center_vertical"
                android:onClick="onListener"
                android:padding="15dp"
                android:text="版本信息"
                android:textColor="@color/color_blue_white"
                android:textSize="@dimen/tv_half_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_color" />
            <!-- 意见反馈 -->

            <Button
                android:id="@+id/settings_btn_yjfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:drawableRight="@drawable/arrow_small_right"
                android:gravity="left|center_vertical"
                android:onClick="onListener"
                android:padding="15dp"
                android:text="意见反馈"
                android:textColor="@color/color_blue_white"
                android:textSize="@dimen/tv_half_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_color" />

            <Button
                android:id="@+id/settings_btn_cssz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:drawableRight="@drawable/arrow_small_right"
                android:gravity="left|center_vertical"
                android:onClick="onListener"
                android:padding="15dp"
                android:text="测速设置"
                android:textColor="@color/color_blue_white"
                android:textSize="@dimen/tv_half_size"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_color"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:padding="15dp" >

                <TextView
                    style="@style/tv_warp"
                    android:text="只允许WIFI传输被动数据"
                    android:textColor="@color/gray_c0c0c3" />

                <Button
                    android:id="@+id/settings_btn_sign"
                    style="@style/tv_warp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_settings_rb_close"
                    android:onClick="onListener" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:visibility="gone" >

                <TextView
                    style="@style/tv_warp"
                    android:text="实时网速检测"
                    android:textColor="@color/gray_c0c0c3" />

                <Button
                    android:id="@+id/settings_btn_sswsjc"
                    style="@style/tv_warp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_settings_rb_close"
                    android:onClick="onListener" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>