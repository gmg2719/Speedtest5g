<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="5dp" android:paddingRight="5dp">
    <ImageView android:id="@+id/jzxhSwitchPopup_iv_left" style="@style/tv_warp" android:src="@drawable/arrow_small_left" android:layout_centerVertical="true"
        android:visibility="invisible" android:contentDescription="@string/abandon" android:paddingTop="38dp"/>
    
    <ImageView android:id="@+id/jzxhSwitchPopup_iv_right" style="@style/tv_warp" android:src="@drawable/arrow_small_right" android:layout_centerVertical="true" android:layout_alignParentRight="true"
        android:visibility="invisible" android:contentDescription="@string/abandon" android:paddingTop="38dp"/>
    
    <androidx.viewpager.widget.ViewPager
	    android:id="@+id/jzxhSwitchPopup_viewPager" android:layout_toLeftOf="@id/jzxhSwitchPopup_iv_right" android:layout_toRightOf="@id/jzxhSwitchPopup_iv_left"
	    android:layout_width="match_parent" android:paddingLeft="5dp" android:paddingRight="5dp"
	    android:layout_height="185dp"/>
</RelativeLayout>
