<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <cn.nokia.speedtest5g.view.actionbar.MyActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rectangle_black_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="LTE设备"
                    android:textColor="@color/gray_c0c0c3"
                    android:textSize="18sp" />

                <View
                    style="@style/style_sp_x"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="设备类型"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/equ_type"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:drawableRight="@drawable/arrow_small_down"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="设备功率（W）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/equ_wate"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="典型天线增益（dBi）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/typical_antenna_gain"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="LTE CRS功率（dBm）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/lte_crs_power"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="天线口输出LTE CRS功率（dBm）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/output_lte_power"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="模数"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/model_num"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rectangle_black_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="LTE传播损耗估算"
                    android:textColor="@color/gray_c0c0c3"
                    android:textSize="18sp" />

                <View
                    style="@style/style_sp_x"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="频段（MHz）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/lte_band"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:drawableRight="@drawable/arrow_small_down"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="距离（m）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/equ_dist"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:drawableRight="@drawable/arrow_small_down"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="墙（堵）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/num_of_wall"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:drawableRight="@drawable/arrow_small_down"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.65"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="传播损耗（dB）"
                            android:textColor="@color/gray_c0c0c3"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/propagation_loss"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.35"
                            android:background="@drawable/aw_white_panel_2"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                            android:textColor="@color/orange"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>