<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/emergent_border_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_emergent_quota_detail_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/emergent_border_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <cn.nokia.speedtest5g.view.HorizontalProgressBarWithNumber
                android:id="@+id/hpro_emergent_quota_detail_item_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/ui_bg_blue"
                android:padding="5dp"
                zhy:progress_horizontal_reached_bar_height="10dp"
                zhy:progress_horizontal_text_color="@color/system_blue"
                zhy:progress_horizontal_unreached_color="@color/ui_bg_blue"
                zhy:progress_horizontal_text_visibility="invisible" />

            <TextView
                android:id="@+id/tv_emergent_quota_detail_item_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>