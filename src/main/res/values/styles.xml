<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialogAnimStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="tv_weight">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_warp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tv_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 下载进度 -->
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <!-- listview属性 -->
    <style name="style_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/split_x_half</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:dividerHeight">1.0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="style_sp_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/snsl_sp</item>
    </style>

    <style name="SpeedTestRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
    </style>

    <style name="PopupTitleAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_title_input</item>
        <item name="android:windowExitAnimation">@anim/popup_title_out</item>
    </style>

    <style name="PopupBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_input</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>

    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="style_edittext_login">
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_half</item>
        <item name="android:textColorHint">@color/login_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_cellsignal_lst_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_small</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_listview_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@drawable/split_x_half</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:dividerHeight">1.0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="tv_cellsignal_lst_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_half</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoadingTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
